    <name>Label</name>
    <text>Min. 𝚫F/𝚫t (threshold for stopping the motor):</text>
    <x>40</x>
    <y>70</y>
    <width>340</width>
  </widget>
  <widget type="textentry" version="3.0.0">
    <name>Text Entry</name>
    <pv_name>LLRF:Scan-MTR$(MTR):minDeltaF-rate</pv_name>
    <x>380</x>
    <y>70</y>
    <width>110</width>
