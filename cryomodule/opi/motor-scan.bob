<?xml version="1.0" encoding="UTF-8"?>
<display version="2.0.0">
  <name>motor-scan</name>
  <macros>
    <MRKR>2</MRKR>
    <MTR>1</MTR>
  </macros>
  <widget type="bool_button" version="2.0.0">
