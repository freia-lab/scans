    <pv_name>LLRF:Scan-MTR$(MTR):On</pv_name>
    <x>40</x>
    <y>30</y>
    <width>180</width>
    <off_label>Checking 𝚫F/𝚫t Off</off_label>
    <on_label>Checking 𝚫F/𝚫t On</on_label>
